<!DOCTYPE html>
<html>
<head>
  <title>Proton backend</title>
  <%= stylesheet_link_tag    "proton/backend/application", media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body class="login" style="height: 0;">
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_with url: create_session_path, remote: false do |f| %>
          <h1>Login</h1>

          <% if flash[:alert] %>
            <div><%= bs_flash_text :alert %></div>
            <br>
          <% end %>

          <div>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
          </div>
          <div>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
          </div>
          <div>
            <%= submit_tag 'Log in', class: 'btn btn-default submit pull-right' %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</body>
</html>

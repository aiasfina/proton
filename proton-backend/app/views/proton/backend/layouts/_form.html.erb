<%= form_with model: @layout, data: {'parsley-validate' => true} do |f| %>
  <div class="form-group col-md-6 col-sm-6 col-xs-12">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="form-group col-md-6 col-sm-6 col-xs-12">
    <%= f.label :identify, class: 'control-label' %>
    <%= f.text_field :identify, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label' %>
    <%= f.text_area :content, class: 'form-control form-control---cm', data: {cm: {mode: 'htmlmixed'}} %>
  </div>
  <div class="form-group">
    <%= f.label :js, class: 'control-label' %>
    <%= f.text_area :js, class: 'form-control form-control---cm', data: {cm: {mode: 'js'}} %>
  </div>
  <div class="form-group">
    <%= f.label :css, class: 'control-label' %>
    <%= f.text_area :css, class: 'form-control form-control---cm', data: {cm: {mode: 'css'}} %>
  </div>
  <div class="ln_solid"></div>
    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
<% end %>

<% content_for :script do %>
  <script>
    init_codemirror($('.form-control---cm'), {lineNumbers: true});
  </script>
<% end %>
